-->8
--background

function create_stars()
stars={}
for i=1,20 do
new_star = {
	x = rnd(128),
	y = rnd(128),
	col = rnd({15,6,13}),
	speed = 1+rnd(1)
}
add(stars,new_star)
end
for i=1,8 do
new_star = {
	x = rnd(128),
	y = rnd(128),
	col = 1,
	speed = 0.5+rnd(0.5)
}
add(stars,new_star)
end
end

function update_stars()
for s in all(stars) do
	s.x-=s.speed
	if s.x<0 then
		s.x=128
		s.y=rnd(128)
	end
end
end
