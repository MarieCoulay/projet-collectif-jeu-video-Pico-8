--bullets

function shoot()
	new_bullet={
		x=p.x,
		y=p.y,
		speed=4,
	}
	add(bullets,new_bullet)
	sfx(0)
end

function update_bullets()
	for i in all(bullets) do
		i.x+=i.speed
	end
end

