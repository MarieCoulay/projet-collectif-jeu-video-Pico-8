pico-8 cartridge // http://www.pico-8.com
version 38
__lua__
function _init()
		p={x=20,y=60,speed=4}
		bullets={}	
end

function _update60()
	-- move player 
	if (btn(➡️)) p.x+=1
	if (btn(⬅️)) p.x-=1
	if (btn(⬆️)) p.y-=1
	if (btn(⬇️)) p.y+=1
	-- bullet function
	if (btnp(❎)) shoot()
	update_bullets()	
end

function _draw()
	cls()
	map()
		-- bullets --
	for i in all(bullets) do
		spr(3,i.x,i.y)
	end	
	spr(1,p.x,p.y)
end
-->8
--bullets

function shoot()
	new_bullet={
		x=p.x,
		y=p.y,
		speed=4,
	}
	add(bullets,new_bullet)
	sfx(0)
end

function update_bullets()
	for i in all(bullets) do
		i.x+=i.speed
	end
end
