__lua__
function _init()
	p={x=20,y=60,speed=4}
	bullets={}	
 	position = p.x
	create_stars()
	create_asteroids()
end

function _update60()
	-- update position player --
	position = p.x
	-- move player --
	if (btn(➡️)) p.x+=1
	if (btn(⬅️)) p.x-=1 
	if (btn(⬆️)) p.y-=1 
	if (btn(⬇️)) p.y+=1
	-- bullet function --
	if (btnp(❎)) shoot()
	update_bullets()
	update_stars()
	update_asteroids()	

end

function _draw()
	cls()
		-- afficher etoiles --
	for s in all(stars) do
		pset(s.x,s.y,s.col)
	end
	map()
		-- afficher asteroides --
	for a in all(asteroids) do
		spr(a.style,a.x,a.y)
	end
		-- bullets --
	for i in all(bullets) do
		spr(3,i.x,i.y)
	end
	-- afficher player --
	spr(1,p.x,p.y)
	-- affichage reacteurs --
	if p.x > position 
		then spr(5,p.x-8,p.y)	
	end
end
