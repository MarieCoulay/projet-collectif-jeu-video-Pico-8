--asteroid
	
	function create_asteroids()
	asteroids={}
	for i=1,3 do
	new_asteroid = {
		x = rnd({136,144, 162}),
		y = rnd(120),
		style = rnd({6,7,8}),
		speed = 0.5
	}
	add(asteroids,new_asteroid)
	end
	end
	function update_asteroids()
	for a in all(asteroids) do
		a.x-=a.speed
		if a.x<-8 then
			a.x=rnd({136,144, 162})
			a.y=rnd(120)
			style = rnd({6,7,8})
		end
	end
	end

